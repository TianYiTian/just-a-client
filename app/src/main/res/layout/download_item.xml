<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/item_background">

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/xiaomi"
        android:layout_width="40dp"
        android:textSize="10sp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="小米"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/baidu"
        android:layout_width="40dp"
        android:textSize="10sp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/xiaomi"
        android:text="网盘"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/xunlei"
        android:layout_width="40dp"
        android:textSize="10sp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/baidu"
        android:text="迅雷"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/cili"
        android:layout_width="40dp"
        android:textSize="10sp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/xunlei"
        android:text="磁力"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/dianlv"
        android:layout_width="40dp"
        android:textSize="10sp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/cili"
        android:text="电驴"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/dianlv"
        android:gravity="center_vertical"/>

</RelativeLayout>